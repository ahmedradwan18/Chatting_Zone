<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_8sdp"
    tools:context=".VisitUserProfActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/cover_image_display"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/cover_image"


                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_display"
                android:layout_width="@dimen/_120sdp"

                android:layout_height="@dimen/_120sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_140sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_imge" />

            <TextView
                android:id="@+id/username_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image_display"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="username"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/cv1_display"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@color/colorProfile"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/_6sdp">

        <ImageView
            android:id="@+id/set_facebook_display"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/fb"

            />

        <ImageView
            android:id="@+id/set_instagram_display"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/instagram"

            />


    </LinearLayout>

    <Button
        android:id="@+id/sendMessageBtn"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/colorProfile"
        android:text="Send Message"
        android:textAllCaps="false"

        android:textColor="#FFF" />
</RelativeLayout>